<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Avatar.Convos.New.Conversation" parent="@style/Avatar.Convos.New.Larger" />
    <style name="Avatar.Convos.New.List" parent="@style/Avatar.Convos.New.Smaller" />
    <style name="CartListingTitle">
        <item name="android:textAppearance">@style/TextDarkGrey.Large.Bold</item>
    </style>
    <style name="CartNote">
        <item name="android:textAppearance">@style/TextGrey</item>
        <item name="android:background">@drawable/edit_text_material</item>
        <item name="android:layout_marginLeft">@dimen/cart_inner_padding_adj</item>
        <item name="android:layout_marginRight">@dimen/cart_inner_padding_adj</item>
    </style>
    <style name="CartNoteToSellerLabel">
        <item name="android:textAppearance">@style/TextBlack.Small</item>
        <item name="android:paddingLeft">@dimen/cart_inner_padding</item>
        <item name="android:paddingRight">@dimen/cart_inner_padding</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/cart_inner_padding</item>
        <item name="android:text">@string/cart_add_a_note_label</item>
    </style>
    <style name="Divider.Horizontal.ConvoList" parent="@style/Divider.Horizontal">
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
    </style>
    <style name="Finds.Title" parent="@style/TextBlack.Bold">
        <item name="android:textSize">@dimen/text_larger</item>
    </style>
    <style name="Finds.Title.PreGraphik" parent="@style/TextBlack.Bold.PreGraphik">
        <item name="android:textSize">@dimen/text_larger</item>
    </style>
    <style name="FollowersLayout">
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ListItemEventAttendeeDividerStyle">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:showDividers">middle</item>
    </style>
    <style name="MultiShopCartGroupItem">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>
    <style name="MultiShopCartGroupItemInset">
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:paddingLeft">@dimen/padding_xlarge</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>
    <style name="MultiShopCartGroupLayout">
        <item name="android:background">@color/cardview_light_background</item>
    </style>
    <style name="MultiShopCartGroupRow">
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
    </style>
    <style name="MultiShopCartItem">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_marginLeft">@dimen/msco_cart_group_spacing</item>
        <item name="android:layout_marginRight">@dimen/msco_cart_group_spacing</item>
    </style>
</resources>
